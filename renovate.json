{
  "extends": ["config:base"],
  "packageRules": [
    {
      "packageNames": ["typescript"],
      "enabled": false
    },
    {
      "packageNames": [
        "@angular/cli",
        "@angular-devkit/build-angular"
      ],
      "groupName": "Angular CLI monorepo"
    },
    {
      "packageNames": [
        "jasmine",
        "jasmine-core"
      ],
      "groupName": "Jasmine packages"
    }
  ],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "rebaseStalePrs": true,
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": "between 5pm and 10pm"
  }
}
